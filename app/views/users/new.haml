#frame
  #page_title
    %h1 Signup
  #main
    %section
      %form#create_user{action: '/users/create', method: :post}
        %input{type: 'hidden', name: "_method", value: "put"}
        %label Email:
        %input{type: "text", name: 'user[email]', value: "#{@user.email.present? ? @user.email : ''}", :required => true}
        %br
        %label Password:
        %input{type:"password", name: 'user[password]', :required => true}
        %label Password Confirmation:
        %input{type:"password", name: 'user[password_confirmation]', :required => true}
        %br
        %input{type: "submit", value: "Save"}