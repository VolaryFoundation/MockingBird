#frame
  #page_title
    %h1 Groups
  #main
    .volary-widget{:"data-src" => "http://volary-pigeon.herokuapp.com/groups-map.html?filters[subject]=groups&filters[keys][location.state]=ca"}
    %section#list-index
      %ul.list
        - @groups.each do |group|
          %li 
            -if group['images'].present? && group['images'][0].present? && !group['images'][0].empty?
              %img.group_img.resize{src: group['images'][0]}
            -elsif group['location'].present? && group['location']['state'].present? && group['location']['city'].present?
              %img.group_img.resize{src: "http://placehold.it/180x125.png", extra_info_state: group['location']['state'], extra_info_city: group['location']['city']}
            -else
              %img.group_img.resize{src: "http://placehold.it/180x125.png"}
            .main_info
              %a{href: "/groups/#{group['_id']}"}= group['props']['name'][0]['value']
              %p= location_to_html(group['location'])
